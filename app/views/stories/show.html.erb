<!DOCTYPE html>
<html>
<head>
  <title>Story View</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <style>
    /* app/assets/stylesheets/application.css */

.story-view {
  padding: 20px;
}

.story-view-content {
  display: flex;
  flex-direction: row;
  position: relative;
}

.story-image img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 10px;
}

.storytail{
  display: flex;
  flex-direction: row;
}

.story-username {
  font-size: 18px;
  margin-top: 10px;
}

.story-controls {
  margin-top: 20px;
}

.story-control {
  display: inline-block;
  padding: 1px 1px;
  color: black;
  background-color: white;
  text-decoration: none;
  border-radius: 5px;
  margin: 0 1px;
}

.story-control.prev {
  background-color: gray;
}

  </style>
</head>
<body>
  <div class="story-view">
    <div class="story-view-content">
      <div class="story-image">
        <img src="data:image/jpeg;base64," alt="<%= @story.user.username %>">
      </div>
      <div class="story-username"><%= @story.user.username %></div>
      <div class="story-controls">
        <% if @prev_story %>
          <a href="<%= story_path(@prev_story) %>" class="story-control prev">Previous</a>
        <% end %>
        <% if @next_story %>
          <a href="<%= story_path(@next_story) %>" class="story-control next">Next</a>
        <% end %>
      </div>
    </div>
    <div class="storys">
         <%= video_tag main_app.rails_blob_url(@story.stories.first.attachments.first), controls: true, class: 'videoclass', width:"500px", height:"600px"%>
    </div>
    <div class="storytail">
         <%= render partial:"likes/button", locals: {likeable: @story} %>
         <%= link_to "Delete_story", story_path(@story), data:{turbo_method: :delete}%>
    </div>
  </div>
</body>
</html>
