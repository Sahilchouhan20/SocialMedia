<body>

    <!-- Post Feed -->
    <section class="feed">
        <!-- Single Post -->
        <article class="post">
            <!-- Post Header -->
            <div class="post-header">
                <div class="post-user-info">
                    <img src="https://via.placeholder.com/50" alt="Profile" class="post-profile-pic">
                    <div>
                        <span class="username"><%= post.user.username %></span>
                    </div>
                </div>
                <div class="dropdown">
                <i class="icon more-options" data-bs-toggle="dropdown">â‹®</i>
                 <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="#">Edit</a></li>
        <li><a class="dropdown-item" href="#">Delete</a></li>
    </ul>
</div>
      
                
            </div>

            <!-- Post Image -->
            <div class="post-image">
                <% if post.images.attached? %>
    <% attachment = post.images.first.attachments.first %>
    <%= link_to main_app.rails_blob_url(attachment), target: "_blank" do %>
      <%= image_tag main_app.rails_blob_url(attachment), class: 'img-thumbnail'%>
    <% end %>
    <%end %>

            <!-- Post Actions -->
            <div class="post-actions">
                <div class="left-actions">
                    <%= render partial:"likes/button", locals: {likeable: post} %>
                    <a href="comments#comment"><i class="icon">ðŸ’¬</i></a>
                </div>
            </div>

            <!-- Post Details -->
            <div class="post-details">
                <div class="post-likes">Liked by <strong></strong> and <strong><a href="#">others</a></strong></div>
                <div class="post-caption"><strong><%=post.user.username%></strong> <%=post.text%></div>
                <div class="post-comments"><a href="comments#comment">View all comments</a></div>
                <div class="post-time"><%24* 2600*(Time.now-(post.created_at))%></div>
            </div>
            
            <!-- Add Comment -->
            <div class="add-comment">
            <input type="text" placeholder="Add a comment...">
            <%button_to "Post", new_post_comment_path(post)%>
            </div>
        </article>

        <!-- Repeat the article structure for more posts -->
    </section>

</body>
</html>