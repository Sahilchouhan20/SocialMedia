<%@post.each do |post|%>
<% if post.images.attached? %>
    <% attachment = post.images.first.attachments.first %>
    <%= link_to post_path(post), target: "_blank" do %>
      <%= image_tag main_app.rails_blob_url(attachment), class: 'img-thumbnail' %>
    <% end %>
  <% else %>
   <p>No images attached</p>
  <% end %>

<%= post.text%>

<% post.comments.each do |comment|%>
  <%=comment.discription%><br>
  <%= link_to "edit", edit_post_comment_path(comment.post, comment)%>
  <%=link_to "delete", [comment.post, comment], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %> <br>
  <%end%>
<% end%>