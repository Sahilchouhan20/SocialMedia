<% like = current_user.likes.find_by(likeable: likeable) %>
<% if like.nil? %>  
  <%=button_to("Like", likes_path(likeable),  class:"btn btn-success",  params:{ like: {likeable_id: likeable.id,  likeable_type: likeable.class.to_s}})%>
<% else %>  
  <%=button_to("Unlinke", like_path(like), class:"btn btn-success", method: :delete)%>
  
<% end %>