<% stylesheet_link_tag 'like'%>
<% like = find_like(likeable) %>
<% if like.nil? %>  
  <%=button_to likes_path(likeable), class:"lk", params:{ like: {likeable_id: likeable.id,  likeable_type: likeable.class.to_s}} do %>
    <i class="fa-sharp fa-regular fa-heart"></i>
  <%end%>
<% else %>  
  <%=button_to like_path(like), class:"lk", method: :delete do%>
    <i id="done" class="fa-sharp fa-solid fa-heart"></i>
  <% end %>
<% end %>