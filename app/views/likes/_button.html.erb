<% like = current_user.likes.find_by(likeable: likeable) %>
<% if like.nil? %>  
  <%=button_to("Like", likes_path(likeable),  class:"btn btn-success",  params:{ like: {likeable_id: likeable.id,  likeable_type: likeable.class.to_s}})%>
<% else %>  
  <%=link_to image_tag("heart.png", style:"height:25px; width:25px;"), like_path(like),params:{ like: {likeable_id: likeable.id,  likeable_type: likeable.class.to_s}}, data: {
                  turbo_method: :delete
                } %>
<% end %>